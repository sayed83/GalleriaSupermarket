
@{
    ViewBag.Title = "ProductRequest";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<section class="content-header">
    <h1>
        Prouduct Request to Admin
        <small>it all starts here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Item</a></li>
        <li><a href="#">Product Request</a></li>
    </ol>
</section>
<section class="content">
    <div class="col-md-7">
        <table id="ItemShow" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Outlet</th>
                    <th>Manger</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th class="nosort">Details</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        Write Details Product Request
                        <small>Simple and fast</small>
                    </h3>
                    <!-- tools box -->
                    <div class="pull-right box-tools">
                        <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip"
                                title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body pad">
                    <form id="ReqForm">
                        <div class="form-group">
                            <textarea id="detialText" class="textarea reqText" placeholder="Place some text here"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="button" id="ReqBtn" value="Send Request" class="btn btn-danger"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="detais-box" style="display:none;">
    <i class="fa fa-times fclose" aria-hidden="true"></i>
    <div class="inv-head">
        <h2> Product Request Details</h2>
    </div>
    
    <div class="loading" style="display:none;text-align:center;">
        <img src="~/Assets/ajax-loader.gif" />
    </div>
    <div class="main-row">
    @if (HttpContext.Current.User.IsInRole("Admin"))
    {
        <div class="form-group">
            <a id="appBtn" style="display:none;" href="javascript:void(0)" class="btn btn-primary btn-approved">Approved</a>
        </div>
    }
        
        <div id="reqDetails" class="requestDetails">

        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Custom/ProductRequest.js"></script>
}
